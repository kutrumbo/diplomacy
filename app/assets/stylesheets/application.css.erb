html {
  background-color: hsl(0, 0%, 96%);
}

/* General styles */

.margin-large {
  margin: 48px 0;
}

.margin-small {
  margin: 24px 0;
}

/* Sign-in styles */

.container-sign-in {
  width: 500px;
}

/* Order UI styles */

.order-region-column {
  min-width: 150px;
}

.select-region {
  width: 170px;
}

.checkbox-confirm {
  padding: 2px 12px;
}

/* Map styles */

.container-map {
  position: relative;
  display: inline-block;
}

.icon-map {
  position: absolute;
}

.occupied:not(.army):not(.fleet) {
  border-radius: 50%;
  height: 16px;
  width: 16px;
  margin: 8px;
  background-color: black;
}

.army.occupied, .fleet.occupied {
  border-radius: 18px;
  border: 3px solid;
}

.army {
  background-image: url(<%= asset_path 'army.svg' %>)
}

.fleet {
  background-image: url(<%= asset_path 'fleet.svg' %>)
}

